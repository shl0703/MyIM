<resources>

    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/loading_anim</item>
        <item name="android:minWidth">45dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:maxWidth">45dp</item>
        <item name="android:maxHeight">45dp</item>
    </style>

    <style name="mProgress">
        <item name="android:indeterminateDrawable">@drawable/progress</item>
        <item name="android:minWidth">45dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:maxWidth">45dp</item>
        <item name="android:maxHeight">45dp</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/common_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
